# Database credentials (shared by postgres and mcp-server containers)
DB_USER=lohono_api
DB_PASSWORD=lohono_api_password
DB_NAME=lohono_api_production

# Port exposed on host for PostgreSQL (container always uses 5432 internally)
DB_EXTERNAL_PORT=5433

# Port exposed on host for MCP SSE server
MCP_PORT=3000

# Redash integration
REDASH_URL=https://redash.isprava.com
REDASH_API_KEY=

# ACL enforcement
# Path to ACL config (default: ./config/acl.yml)
ACL_CONFIG_PATH=
# Fallback user email for stdio mode (single-user / testing)
MCP_USER_EMAIL=
